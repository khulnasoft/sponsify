{
  "name": "sponsify",
  "type": "module",
  "version": "0.16.1",
  "packageManager": "pnpm@9.9.0",
  "description": "Toolkit for generating sponsors images",
  "author": "Md Sulaiman <support@khulnasoft.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/khulnasoft",
  "homepage": "https://github.com/khulnasoft-bot/sponsify#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khulnasoft-bot/sponsify.git"
  },
  "bugs": {
    "url": "https://github.com/khulnasoft-bot/sponsify/issues"
  },
  "keywords": [
    "sponsors",
    "github-sponsors"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "sponsify": "./bin/sponsify.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "stub": "unbuild --stub",
    "dev": "esno src/cli.ts",
    "test": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "prettier": "prettier --write ."
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "**/*.{json,md,mdx,css,html,yml,yaml,scss}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "consola": "^3.2.3",
    "d3-hierarchy": "^3.1.2",
    "dotenv": "^16.4.5",
    "eslint-plugin-import": "^2.31.0",
    "normalize-url": "^8.0.1",
    "ofetch": "^1.4.1",
    "p-limit": "^6.1.0",
    "picocolors": "^1.1.1",
    "sharp": "^0.33.5",
    "unconfig": "^0.5.5",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@khulnasoft/ni": "^0.0.1",
    "@khulnasoft/sponsify-utils": "^0.0.1",
    "@repo/eslint-config": "workspace:*",
    "@types/d3-hierarchy": "^3.1.7",
    "@types/node": "^22.9.0",
    "@types/yargs": "^17.0.33",
    "bumpp": "^9.8.1",
    "eslint": "^9.14.0",
    "esno": "^4.8.0",
    "husky": "^9.1.6",
    "jiti": "^1.21.6",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "unbuild": "^2.0.0",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  },
  "resolutions": {
    "sponsify": "workspace:*"
  }
}
